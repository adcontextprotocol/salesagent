{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/signals/activate-signal-response.json",
  "title": "Activate Signal Response",
  "description": "Response payload for activate_signal task",
  "type": "object",
  "properties": {
    "message": {
      "type": "string",
      "description": "Human-readable summary of the activation status"
    },
    "context_id": {
      "type": "string",
      "description": "Session continuity identifier for tracking progress"
    },
    "task_id": {
      "type": "string",
      "description": "Unique identifier for tracking the activation"
    },
    "status": {
      "$ref": "/schemas/v1/enums/task-status.json",
      "description": "Current activation state: 'submitted' (pending), 'working' (processing), 'completed' (deployed), 'failed', 'input-required' (needs auth), etc."
    },
    "decisioning_platform_segment_id": {
      "type": "string",
      "description": "The platform-specific ID to use once activated"
    },
    "estimated_activation_duration_minutes": {
      "type": "number",
      "description": "Estimated time to complete (optional)",
      "minimum": 0
    },
    "deployed_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when activation completed (optional)"
    },
    "errors": {
      "type": "array",
      "description": "Task-specific errors and warnings (e.g., activation failures, platform issues)",
      "items": {
        "$ref": "/schemas/v1/core/error.json"
      }
    }
  },
  "required": [
    "message",
    "context_id",
    "task_id",
    "status"
  ],
  "additionalProperties": false
}
