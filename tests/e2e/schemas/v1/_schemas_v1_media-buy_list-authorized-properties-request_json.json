{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/media-buy/list-authorized-properties-request.json",
  "title": "List Authorized Properties Request",
  "description": "Request parameters for discovering all properties this agent is authorized to represent",
  "type": "object",
  "properties": {
    "tags": {
      "type": "array",
      "description": "Filter properties by specific tags (optional)",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_]+$",
        "description": "Tag to filter by (e.g., 'local_radio', 'premium_content')"
      }
    }
  },
  "additionalProperties": false
}
