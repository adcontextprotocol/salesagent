# UI Testing Environment Variables

# Application URLs
BASE_URL=http://localhost:8001
MCP_URL=http://localhost:8080

# Test Credentials
# Note: Since the app uses Google OAuth, these are for reference/future use
TEST_ADMIN_EMAIL=admin@example.com
TEST_USER_EMAIL=user@example.com
TEST_ADMIN_PASSWORD=not_used_with_oauth
TEST_USER_PASSWORD=not_used_with_oauth

# Test Configuration
HEADLESS=true              # Run browser in headless mode
DEBUG=false                # Enable debug logging
SCREENSHOT_ON_FAILURE=true # Take screenshots when tests fail

# Authentication Mode
# If you add test auth endpoint to admin_ui.py:
ENABLE_TEST_AUTH=false     # Set to true if test auth endpoint is added
FLASK_ENV=development      # Required for test auth endpoint

# Browser Configuration
BROWSER_TIMEOUT=30000      # Default timeout in milliseconds
SLOW_MO=0                  # Slow down browser actions by X milliseconds

# Test Data
DEFAULT_TENANT_NAME=Test Publisher
DEFAULT_SUBDOMAIN=test-pub

# Parallel Testing
WORKERS=4                  # Number of parallel test workers

# Reporting
GENERATE_REPORT=true       # Generate HTML report
GENERATE_ALLURE=false      # Generate Allure report