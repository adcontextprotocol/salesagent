{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "checkJs": false,
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"]
    }
  },
  "include": [
    "js/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
