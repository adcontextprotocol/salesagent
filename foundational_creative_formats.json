{
  "version": "1.0",
  "foundational_formats": [
    {
      "format_id": "foundation_immersive_canvas",
      "name": "Immersive Canvas",
      "type": "display",
      "description": "Premium responsive format that adapts across publisher platforms",
      "is_standard": true,
      "is_foundational": true,
      "specs": {
        "responsive": true,
        "platforms": ["desktop", "tablet", "mobile"],
        "minimum_viewport": {
          "desktop": {"width": 970, "height": 250},
          "tablet": {"width": 728, "height": 90},
          "mobile": {"width": 320, "height": 50}
        },
        "maximum_viewport": {
          "desktop": {"width": 1920, "height": 1080},
          "tablet": {"width": 1024, "height": 768},
          "mobile": {"width": 414, "height": 896}
        },
        "file_types": ["html5", "jpg", "png", "gif"],
        "max_file_size_kb": 5120,
        "animation": {
          "allowed": true,
          "max_duration_seconds": 30,
          "user_initiated_expansion": true
        }
      }
    },
    {
      "format_id": "foundation_product_showcase_carousel",
      "name": "Product Showcase Carousel",
      "type": "display",
      "description": "Interactive display featuring 3-10 products",
      "is_standard": true,
      "is_foundational": true,
      "specs": {
        "min_products": 3,
        "max_products": 10,
        "product_image_ratio": "1:1",
        "platforms": ["desktop", "tablet", "mobile"],
        "base_dimensions": {
          "desktop": {"width": 970, "height": 250},
          "tablet": {"width": 728, "height": 90},
          "mobile": {"width": 320, "height": 100}
        },
        "product_image_size": {
          "desktop": {"width": 200, "height": 200},
          "tablet": {"width": 150, "height": 150},
          "mobile": {"width": 100, "height": 100}
        },
        "file_types": ["jpg", "png"],
        "max_file_size_per_image_kb": 200,
        "features": {
          "swipeable": true,
          "auto_rotate": true,
          "click_through_per_product": true
        }
      }
    },
    {
      "format_id": "foundation_expandable_display",
      "name": "Expandable Display",
      "type": "display",
      "description": "Banner with expandable canvas on user interaction",
      "is_standard": true,
      "is_foundational": true,
      "specs": {
        "collapsed_state": {
          "desktop": {"width": 970, "height": 90},
          "tablet": {"width": 728, "height": 90},
          "mobile": {"width": 320, "height": 50}
        },
        "expanded_state": {
          "desktop": {"width": 970, "height": 500},
          "tablet": {"width": 728, "height": 500},
          "mobile": {"width": 320, "height": 480}
        },
        "expansion_direction": ["down", "up", "left", "right"],
        "expansion_trigger": ["click", "hover", "auto"],
        "file_types": ["html5", "jpg", "png"],
        "max_file_size_kb": 2048,
        "animation": {
          "allowed": true,
          "polite_load": true,
          "close_button_required": true
        }
      }
    },
    {
      "format_id": "foundation_scroll_triggered_experience",
      "name": "Scroll-Triggered Experience",
      "type": "display",
      "description": "Mobile-first format that reveals content on scroll",
      "is_standard": true,
      "is_foundational": true,
      "specs": {
        "trigger_type": "scroll",
        "trigger_threshold": "25%",
        "platforms": ["mobile", "tablet"],
        "dimensions": {
          "mobile": {"width": "100vw", "height": "100vh"},
          "tablet": {"width": "100vw", "height": "50vh"}
        },
        "parallax_enabled": true,
        "sticky_duration_seconds": 5,
        "file_types": ["html5", "jpg", "png", "mp4"],
        "max_file_size_kb": 3072,
        "video_specs": {
          "max_duration_seconds": 15,
          "autoplay": true,
          "muted": true,
          "controls": false
        }
      }
    },
    {
      "format_id": "foundation_universal_video",
      "name": "Universal Video",
      "type": "video",
      "description": "Standard video specifications across platforms",
      "is_standard": true,
      "is_foundational": true,
      "specs": {
        "aspect_ratios": ["16:9", "9:16", "1:1", "4:5"],
        "resolutions": {
          "16:9": [
            {"width": 1920, "height": 1080},
            {"width": 1280, "height": 720},
            {"width": 854, "height": 480}
          ],
          "9:16": [
            {"width": 1080, "height": 1920},
            {"width": 720, "height": 1280}
          ],
          "1:1": [
            {"width": 1080, "height": 1080},
            {"width": 720, "height": 720}
          ],
          "4:5": [
            {"width": 1080, "height": 1350},
            {"width": 720, "height": 900}
          ]
        },
        "codecs": ["h264", "vp9"],
        "file_types": ["mp4", "webm"],
        "max_file_size_mb": 50,
        "max_bitrate_mbps": 10,
        "duration_seconds": {
          "min": 6,
          "max": 30,
          "extended_max": 180
        },
        "audio": {
          "codec": "aac",
          "bitrate_kbps": 128,
          "muted_by_default": true
        },
        "captions": {
          "required": true,
          "formats": ["srt", "vtt", "burned_in"]
        }
      }
    }
  ],
  "extension_schema": {
    "format_id": "string - unique identifier for the extended format",
    "extends": "string - foundational format_id to extend from",
    "name": "string - publisher-specific name",
    "modifications": {
      "dimensions": "optional - override specific dimensions",
      "additional_specs": "optional - add publisher-specific requirements",
      "restrictions": "optional - limit certain features",
      "enhancements": "optional - add publisher-specific features"
    }
  },
  "example_extension": {
    "format_id": "nytimes_flex_xl_slideshow",
    "extends": "foundation_product_showcase_carousel",
    "name": "NYTimes Slideshow Flex XL",
    "modifications": {
      "dimensions": {
        "desktop": [
          {"width": 1125, "height": 600},
          {"width": 970, "height": 600}
        ],
        "tablet": {"width": 728, "height": 600},
        "mobile": {"width": 800, "height": 1400}
      },
      "additional_specs": {
        "image_count": "3-5",
        "headlines_per_slide": true,
        "descriptor_messages": true,
        "character_limits": {
          "headline": 100,
          "descriptor_desktop": 210,
          "descriptor_mobile": 70,
          "cta": 15
        }
      },
      "enhancements": {
        "split_screen_layout": true,
        "retina_display_support": true,
        "safe_zone_mobile": "100px all sides"
      }
    }
  }
}